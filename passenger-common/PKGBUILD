_pkg=passenger
pkgname=passenger-common
pkgver=2.2.5
pkgrel=1
pkgdesc="mod_rails passenger common code"
arch=('any')
url="http://www.modrails.com"
license=('GPL')
source=(http://rubyforge.org/frs/download.php/63009/$_pkg-$pkgver.tar.gz)
md5sums=("93838b842ce0a0c65d7c6ef9ce59c41f")

build(){
  _root=/usr/lib/passenger/
  mkdir -p $pkgdir$_root
  cd $pkgdir$_root
  cp -R $srcdir/$_pkg-$pkgver/* .
  rm -rf ext debian
}
