_pkg=passenger
pkgname=passenger-apache2
pkgver=2.2.5
pkgrel=1
pkgdesc="mod_rails passenger module for apache2"
arch=('i686' 'x86_64')
url="http://www.modrails.com"
license=('GPL')
depends=('apache' 'ruby-enterprise' 'passenger-common')
source=(http://rubyforge.org/frs/download.php/63009/$_pkg-$pkgver.tar.gz)
md5sums=("93838b842ce0a0c65d7c6ef9ce59c41f")
install=$_pkg.install

build(){
  $srcdir/$_pkg-$pkgver/bin/passenger-install-apache2-module -a
  mkdir -p $pkgdir/etc/httpd/modules/
  cp $srcdir/$_pkg-$pkgver/ext/apache2/mod_passenger.so $pkgdir/etc/httpd/modules/mod_passenger.so
}
